<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/nav_username_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="18dp"
        android:layout_marginTop="26.5dp"
        android:layout_marginLeft="22.8dp"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:text="SlotNSlot" />

    <TextView
        android:id="@+id/nav_bio_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4.5dp"
        android:layout_marginLeft="22.8dp"
        android:layout_below="@id/nav_username_textview"
        android:textSize="13sp"
        android:textColor="@color/white"
        android:text="peer count : 0"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@drawable/side_nav_bar_border"
        android:layout_below="@id/nav_bio_textview"
        android:layout_marginTop="24.2dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/setting_button"
        android:layout_marginRight="21.5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone"/>

</RelativeLayout>
