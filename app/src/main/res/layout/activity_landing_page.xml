<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/landing_background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_img"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/buildings"
        android:layout_alignParentBottom="true"
        android:scaleType="fitXY"
        />
    <View
        android:id="@+id/landing_loading_view"
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginBottom="121.5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/landing_loading_background"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:textColor="#c9b3e3"
        android:layout_centerHorizontal="true"
        android:text="Loading â€¦"
        android:layout_above="@id/landing_loading_view"
        android:layout_marginBottom="11dp"
        />

</RelativeLayout>