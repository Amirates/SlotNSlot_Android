<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="12dp"
    android:orientation="vertical"
    android:background="@drawable/make_step_background">

    <RelativeLayout
        android:id="@+id/make_slot_text_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/make_slot_text_layout"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginBottom="24dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#b7b5cc"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="6.5sp"
                android:layout_gravity="center_horizontal"
                android:text="HIT RATIO"
                />
            <TextView
                android:id="@+id/make_slot_summary_hit_ratio_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="3.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="25%"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#b7b5cc"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="6.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:text="TOTAL STAKE"
                />
            <TextView
                android:id="@+id/make_slot_summary_total_stake_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="3.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="25%"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#b7b5cc"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="6.5sp"
                android:layout_gravity="center_horizontal"
                android:text="BET RANGE"
                />
            <TextView
                android:id="@+id/make_slot_summary_bet_range_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="3.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="25%"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#b7b5cc"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="6.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="13dp"
                android:text="MAX PRIZE"
                />
            <TextView
                android:id="@+id/make_slot_summary_max_prize_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.04"
                android:lineSpacingExtra="3.5sp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="25%"
                />
        </LinearLayout>
        
    </LinearLayout>
</LinearLayout>