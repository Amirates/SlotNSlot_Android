<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1e0d44">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="49dp">

            <ImageView
                android:id="@+id/withdraw_qr_code_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="36dp"
                android:src="@drawable/qr_scan_icon" />

            <EditText
                android:id="@+id/withdraw_address_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="21.5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/withdraw_qr_code_image"
                android:hint="Address"
                android:textColor="#b5b9d0"
                android:textColorHint="#b5b9d0"
                android:background="@android:color/transparent"
                android:textSize="24sp" />

        </RelativeLayout>

        <View
            android:id="@+id/withdraw_address_border_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="9dp"
            android:background="#ff1c71" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28.5dp">

            <TextView
                android:id="@+id/withdraw_amount_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="37dp"
                android:text="@string/underline_all"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/withdraw_amount_edittext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="21.5dp"
                android:layout_marginRight="10dp"
                android:layout_toLeftOf="@id/withdraw_amount_image"
                android:hint="Amount (ETH)"
                android:textColor="#b5b9d0"
                android:textColorHint="#b5b9d0"
                android:inputType="numberDecimal"
                android:background="@android:color/transparent"
                android:textSize="24sp" />

        </RelativeLayout>

        <View
            android:id="@+id/withdraw_amount_border_view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginTop="9dp"
            android:background="#3b305c" />

        <TextView
            android:id="@+id/withdraw_current_balance_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="21.5dp"
            android:layout_marginTop="5dp"
            android:text="Current Balance :"
            android:textColor="#797c8f"
            android:textSize="13.8sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
        </FrameLayout>

        <Button
            android:id="@+id/withdraw_btn"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:layout_gravity="bottom"
            android:background="#ff1c71"
            android:gravity="center"
            android:textColor="@color/white"
            android:text="WITHDRAW" />

    </LinearLayout>
</ScrollView>